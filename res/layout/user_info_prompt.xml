<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btnOk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff8de"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/txtShow"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_weight="1"
            android:paddingBottom="17dip"
            android:paddingTop="17dip"
            android:text="TA还未加入圈子，邀请TA加入吧"
            android:textColor="#ff7800"
            android:textSize="@dimen/scale32sp" />

        <Button
            android:layout_width="70dip"
            android:layout_height="30dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/user_btn"
            android:text="提醒TA"
            android:textColor="#008bd2" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#efe9c4" />

</LinearLayout>