<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp58"
        android:layout_marginTop="@dimen/dp60"
        android:textColor="#6e6e6e"
        android:textSize="@dimen/sp_32" />

    <TextView
        android:id="@+id/text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp58"
        android:layout_marginTop="@dimen/dp36"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_36" />

    <com.changlianxi.view.SearchEditText
        android:id="@+id/edit_authCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp98"
        android:layout_marginTop="@dimen/dp42"
        android:background="@drawable/input_new"
        android:hint="请输入验证码"
        android:inputType="number"
        android:paddingLeft="@dimen/dp58"
        android:paddingRight="15dip"
        android:textColor="@color/black"
        android:textColorHint="@color/editTextClolor"
        android:textSize="@dimen/sp_40" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp94"
        android:layout_marginLeft="@dimen/dp76"
        android:layout_marginRight="@dimen/dp76"
        android:layout_marginTop="@dimen/dp52"
        android:background="@drawable/button_hui_new"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_48" />

    <Button
        android:id="@+id/btn_get_authCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp94"
        android:layout_marginLeft="@dimen/dp76"
        android:layout_marginRight="@dimen/dp76"
        android:layout_marginTop="12dip"
        android:background="@drawable/button_hui_new"
        android:enabled="false"
        android:singleLine="true"
        android:text="重新获取验证码（60秒）"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_48" />

</LinearLayout>