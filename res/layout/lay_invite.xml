<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff8cc"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dip"
        android:layout_marginTop="22dip"
        android:gravity="center"
        android:textColor="#99000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center" >

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/scale97dip"
            android:layout_marginRight="@dimen/scale10dip"
            android:layout_weight="1"
            android:background="@drawable/btn_14c1c7"
            android:text="@string/join_circle"
            android:textColor="@color/white"
            android:textSize="@dimen/scale36sp" />

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/scale97dip"
            android:layout_marginLeft="@dimen/scale10dip"
            android:layout_weight="1"
            android:background="@drawable/btn_aaaaaa"
            android:text="@string/ignore_invitation"
            android:textColor="@color/white"
            android:textSize="@dimen/scale36sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="@dimen/scale36dip"
        android:scaleType="fitXY"
        android:src="@drawable/line_aaaaaa" />

</LinearLayout>