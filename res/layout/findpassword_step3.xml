<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp80"
        android:background="@drawable/input_new"
        android:orientation="vertical" >

        <com.changlianxi.view.SearchEditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp98"
            android:layout_marginLeft="@dimen/dp54"
            android:background="@null"
            android:hint="设置6-16位登录密码"
            android:inputType="textPassword"
            android:paddingRight="15dip"
            android:textColor="@color/editTextClolor"
            android:textColorHint="@color/editTextClolor"
            android:textSize="@dimen/sp_40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/dp54"
            android:background="@color/bg_line" />

        <com.changlianxi.view.SearchEditText
            android:id="@+id/edit_password1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp98"
            android:layout_marginLeft="@dimen/dp54"
            android:background="@null"
            android:hint="再次输入您的密码"
            android:inputType="textPassword"
            android:paddingRight="15dip"
            android:textColor="@color/black"
            android:textColorHint="@color/editTextClolor"
            android:textSize="@dimen/sp_40" />
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp94"
        android:layout_marginLeft="@dimen/dp76"
        android:layout_marginRight="@dimen/dp76"
        android:layout_marginTop="@dimen/dp86"
        android:background="@drawable/button_hui_new"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_48" />

</LinearLayout>