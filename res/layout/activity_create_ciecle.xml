<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        android:layout_width="fill_parent"
        layout="@layout/title_bar" />

    <EditText
        android:id="@+id/editCircleName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp98"
        android:layout_marginTop="@dimen/dp80"
        android:background="@drawable/input_new"
        android:hint="请输入圈子名称"
        android:paddingLeft="@dimen/dp54"
        android:paddingRight="15dip"
        android:textColor="@color/black"
        android:textColorHint="@color/editTextClolor"
        android:textSize="@dimen/sp_40" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp94"
        android:layout_marginLeft="@dimen/dp76"
        android:layout_marginRight="@dimen/dp76"
        android:layout_marginTop="@dimen/dp86"
        android:background="@drawable/button_new"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_48" />

</LinearLayout>