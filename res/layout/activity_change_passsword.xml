<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scale20dip"
        android:layout_marginRight="@dimen/scale20dip"
        android:layout_marginTop="@dimen/scale30dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bg"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/scale30dip"
                android:text="@string/now_password"
                android:textColor="@color/black"
                android:textSize="@dimen/scale34sp" />

            <com.changlianxi.view.SearchEditText
                android:id="@+id/nowPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scale115dip"
                android:background="@null"
                android:paddingRight="15dip"
                android:password="true"
                android:singleLine="true"
                android:textSize="@dimen/scale34sp" >
            </com.changlianxi.view.SearchEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scale20dip"
            android:background="@drawable/input_bg"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/scale30dip"
                android:text="@string/new_passwrod"
                android:textColor="@color/black"
                android:textSize="@dimen/scale34sp" />

            <com.changlianxi.view.SearchEditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scale115dip"
                android:background="@null"
                android:paddingRight="15dip"
                android:password="true"
                android:singleLine="true"
                android:textSize="@dimen/scale34sp" >
            </com.changlianxi.view.SearchEditText>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_marginLeft="@dimen/scale20dip"
        android:layout_marginRight="@dimen/scale20dip"
        android:layout_marginTop="@dimen/scale30dip"
        android:background="@drawable/btn_14c1c7"
        android:text="@string/determine"
        android:textColor="@color/white"
        android:textSize="21sp" />

</LinearLayout>