<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b3231815"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dip"
        android:layout_marginTop="22dip"
        android:paddingLeft="@dimen/dp42"
        android:text="有人修改了你的资料，快去查看下。"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_38" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dip"
        android:layout_marginLeft="@dimen/dp42"
        android:layout_marginRight="@dimen/dp42"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnLook"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/scale97dip"
            android:layout_marginRight="@dimen/scale10dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="9dip"
            android:text="查看"
            android:textColor="@color/white"
            android:textSize="@dimen/scale36sp" />

        <Button
            android:id="@+id/btnNotLook"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/scale97dip"
            android:layout_marginLeft="@dimen/scale10dip"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="9dip"
            android:text="忽略"
            android:textColor="#ff8080"
            android:textSize="@dimen/scale36sp" />
    </LinearLayout>

</LinearLayout>