<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/scale55dip"
    android:paddingRight="@dimen/scale55dip" >

    <TextView
        android:id="@+id/footViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="@dimen/scale66dip"
        android:textColor="#8c8c8c"
        android:textSize="@dimen/scale28sp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/scale89dip"
        android:layout_marginBottom="@dimen/scale30dip"
        android:background="@drawable/btn_bg2"
        android:text="@string/save"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp42" />

</LinearLayout>