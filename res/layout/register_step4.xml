<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp94"
        android:gravity="center"
        android:text="恭喜您，账号创建成功"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_44" />

    <com.changlianxi.view.SearchEditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp98"
        android:layout_marginTop="@dimen/dp34"
        android:background="@drawable/input_new"
        android:hint="请输入您的真实姓名"
        android:paddingLeft="@dimen/dp54"
        android:paddingRight="15dip"
        android:textColor="@color/black"
        android:textColorHint="@color/editTextClolor"
        android:textSize="@dimen/sp_40" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp94"
        android:layout_marginLeft="@dimen/dp76"
        android:layout_marginRight="@dimen/dp76"
        android:layout_marginTop="@dimen/dp52"
        android:background="@drawable/button_hui_new"
        android:enabled="false"
        android:text="开始使用"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_48" />

</LinearLayout>