<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.changlianxi.view.SearchEditText
        android:id="@+id/edit_cellPhoneOrEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp98"
        android:layout_marginTop="@dimen/dp80"
        android:background="@drawable/input_new"
        android:hint="请输入您的手机号/邮箱"
        android:paddingLeft="@dimen/dp54"
        android:paddingRight="15dip"
        android:textColor="@color/black"
        android:textColorHint="@color/editTextClolor"
        android:textSize="@dimen/sp_40" />

    <Button
        android:id="@+id/btn_find_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp94"
        android:layout_marginLeft="@dimen/dp76"
        android:layout_marginRight="@dimen/dp76"
        android:layout_marginTop="@dimen/dp86"
        android:background="@drawable/button_hui_new"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_48" />

</LinearLayout>